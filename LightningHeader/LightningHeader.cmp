<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,forceCommunity:availableForAllPageTypes" access="global">
	<aura:attribute name="title" type="String" access="global" default="Header Title" />
    <aura:attribute name="background" type="String" access="global" default="Sky" />
 	<div class="slds">
		<div class="{!'slds-page-header' +' '+(v.background)}">
            <h1 class="slds-page-header__title" title="{!v.title}">{!v.title}</h1>
        </div>
    </div>
</aura:component>